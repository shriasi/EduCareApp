<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/newlast"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="140dp">

        <TextView
            android:id="@+id/tql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="@string/_20_august_2020"
            android:textColor="#fff"
            android:textSize="20dp"

            />

        <ImageView
            android:id="@+id/picture_chat"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_below="@+id/tql"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/teachernew"
            />

        <TextView
            android:text="Dear Student,Can you attend today class?"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_below="@+id/tql"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/picture_chat"
            android:background="@drawable/chat_gradient1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="414dp">

        <TextView
            android:layout_width="168dp"
            android:layout_height="69dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="320dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/chat_gradient2"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="@string/yes_sir_thank_you"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Search Chats"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"/>

        <SearchView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp">

        <ImageView
            android:id="@+id/pic_chat2"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/teachernew" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="64dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="420dp"
            android:layout_toRightOf="@id/pic_chat2"
            android:background="@drawable/chat_gradient1"
            android:text="Dear Student,Can you attend today class?"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="168dp"
            android:layout_height="69dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/chat_gradient2"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="@string/yes_sir_thank_you"
            android:textColor="#fff"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="79dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="93dp"
            android:src="@drawable/ic_baseline_send_24" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="249dp"
        android:layout_height="79dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Your message Here!"
        android:textAlignment="center" />


</FrameLayout>